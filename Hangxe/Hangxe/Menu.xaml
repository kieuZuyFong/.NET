        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Chính" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Nút Thêm hãng xe -->
            <Button Content="Thêm hãng xe" Width="150" Height="40" Click="BtnAddCarBrand_Click"/>
            <!-- Nút Thêm người dùng -->
            <Button Content="Quản lý người dùng" Width="150" Height="40" Click="BtnAddUser_Click"/>
            <!-- Nút Trang chủ -->
            <Button Content="Trang chủ" Width="150" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
